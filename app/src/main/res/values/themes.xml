<resources>
    <style name="Theme.Truckmeandroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.TruckmeAndroid.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/launcher_theme</item>
    </style>
    <style name="Theme.TruckmeAndroid.Auth" parent="Theme.Truckmeandroid">
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="ButtonRippleEffect">
        <item name="colorControlHighlight">@color/green_10</item>
    </style>
    <style name="ButtonRippleItemBackground" parent="ClickableButtonStyle">
        <item name="android:theme">@style/ButtonRippleEffect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="ClickableButtonStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/white</item>
        <item name="iconifiedByDefault">false</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="ToolbarWithSearchViewStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="android:editTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="paddingStart">-16dp</item>
        <item name="paddingEnd">-16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>
    <style name="Theme.Truckme.ToolbarTitleBold" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Negative</item>
    </style>
    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/teal_700</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="errorTextAppearance">@style/ErrorAppearance</item>
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>
    <style name="ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_TopRight</item>
        <item name="useCompatPadding">false</item>
    </style>
    <style name="ShapeAppearanceOverlay_TopRight" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
    </style>
    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>
